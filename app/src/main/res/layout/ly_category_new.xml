<!--                android:gravity="right"-->
<!--                android:layoutDirection="rtl"-->
<!--                android:enabled="false"-->
<!--                android:layout_marginBottom="-10dp"-->
<!--                />-->

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="80"
            android:orientation="vertical">

            <ImageView
                android:padding="@dimen/_2sdp"
                app:srcCompat="@drawable/ic_long_pants"
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"

                android:layout_weight="10"
                android:fontFamily="@font/lato"
                android:gravity="left"
                android:text="Paquete bienvenida"
                android:textColor="@color/colorPrimary"
                android:singleLine="true"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/planDescription"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:maxLength="20"
                android:text="PantalÃ³n"
                android:singleLine="true"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_12sdp"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:layout_weight="30"
                android:ellipsize="end"
                android:fontFamily="@font/montserrat"
                android:gravity="center|top"
                android:text="Horas al mes"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_10sdp" />


        </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/backp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="right"
        >

        <ImageView
            android:id="@+id/btnclose"
            android:layout_marginRight="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            app:srcCompat="@drawable/ic_error"
            android:tint="@color/colorPrimary"
            />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/icBack"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    />
                <TextView
                    android:id="@+id/tvApplianceNameBack"
                    android:layout_width="match_parent"
                    android:text="asdasasdasdasdsdasdasd"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:fontFamily="@font/montserrat"/>
            </LinearLayout>
            <View
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="#000000"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:weightSum="100"
                android:padding="@dimen/_5sdp"
                >

                <RelativeLayout
                    android:id="@+id/btnMINUS"
                    android:layout_weight="30"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@drawable/option_border_blue"
                    >
                    <TextView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="match_parent"
                        android:text="-"
                        android:gravity="center"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/colorAccent6X"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/btnHOURS"
                    android:layout_weight="40"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"
                    />
                <RelativeLayout
                    android:id="@+id/btnPLUS"
                    android:layout_weight="30"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@drawable/option_border_blue"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="+"
                        android:gravity="center"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/colorAccent6X"/>
                </RelativeLayout>


            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:text="Cantidad"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:fontFamily="@font/montserrat"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100"
                android:padding="@dimen/_5sdp"
                >

                <RelativeLayout
                    android:layout_weight="30"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@drawable/option_border_blue"
                    >
                    <TextView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="match_parent"
                        android:text="-"
                        android:gravity="center"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/colorAccent6X"/>
                </RelativeLayout>

                <TextView
                    android:layout_weight="40"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"
                    />
                <RelativeLayout
                    android:layout_weight="30"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@drawable/option_border_blue"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="+"
                        android:gravity="center"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/colorAccent6X"/>
                </RelativeLayout>


            </LinearLayout>

            <TextView

                android:text="horas al mes"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>



    </LinearLayout>


</LinearLayout>
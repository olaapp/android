<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <LinearLayout
        android:id="@+id/sect_1"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/lbl1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="NotSibling">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="@dimen/_12sdp"
                android:layout_height="match_parent"
                android:tint="#A3A3A5"
                app:srcCompat="@drawable/ic_places"/>
            <TextView
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/theft_ind_1"
                android:textColor="#4B7493"
                android:fontFamily="@font/montserrat_bold"/>
        </LinearLayout>
        <View
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="#c4c4c4"/>
    </LinearLayout>
    <LinearLayout

        android:layout_marginBottom="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/sect_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            >
                <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:fontFamily="@font/montserrat"
                    android:minHeight="@dimen/_40sdp"
                android:hint="Departamento">
                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:minHeight="@dimen/_40sdp"
                    android:id="@+id/department_dd"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/montserrat"
                    android:editable="false"
                    android:textSize="@dimen/_9sdp"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            >
            <com.google.android.material.textfield.TextInputLayout

                android:layout_marginTop="@dimen/_10sdp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:minHeight="@dimen/_40sdp"
                android:fontFamily="@font/montserrat"

                android:hint="Municipio">
                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:minHeight="@dimen/_40sdp"
                    android:id="@+id/cities_dd"
                    android:fontFamily="@font/montserrat"
                    android:layout_width="match_parent"
                    android:editable="false"
                    android:textSize="@dimen/_9sdp"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="100"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            >
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tv5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/TextAppearance.AppCompat.Small"
                style="@style/LoginTextInputLayoutStyle"
                android:fontFamily="@font/montserrat"
                android:hint="@string/reference_2"
                app:counterMaxLength="256"
                app:helperTextEnabled="true"
                app:layout_constraintBottom_toTopOf="@+id/guideline">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtReference"
                    android:gravity="top|left"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:singleLine="false"
                    android:inputType="textMultiLine"
                    android:fontFamily="@font/montserrat"
                    android:scrollbars="vertical"
                    android:maxLength="256"
                    android:text=""
                    android:textColor="@color/colorPrimary" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@id/lbl1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="match_parent"
                    android:tint="#A3A3A5"
                    app:srcCompat="@drawable/ic_bino"/>
                <TextView
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/theft_ind_2"
                    android:textColor="#4B7493"
                    android:fontFamily="@font/montserrat_bold"/>


            </LinearLayout>
            <View
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="#c4c4c4"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            >
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:minHeight="@dimen/_40sdp"
                android:fontFamily="@font/montserrat"
                android:hint="Motivo de sospecha">
                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/reasons_dd"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/montserrat"
                    android:editable="false"
                    android:minHeight="@dimen/_40sdp"
                    android:textSize="@dimen/_9sdp"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            >
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:minHeight="@dimen/_40sdp"
                android:fontFamily="@font/montserrat"
                android:hint="Horario observado"
                >
                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/scheduled_dd"
                        android:textSize="@dimen/_9sdp"
                        android:minHeight="@dimen/_40sdp"
                        android:layout_width="match_parent"
                        android:fontFamily="@font/montserrat"
                        android:editable="false"
                        android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>






        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="100"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"

            >
            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginBottom="@dimen/_100sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/TextAppearance.AppCompat.Small"
                style="@style/LoginTextInputLayoutStyle"
                android:fontFamily="@font/montserrat"
                android:hint="@string/description_2"
                app:counterMaxLength="256"
                app:helperTextEnabled="true"
                app:layout_constraintBottom_toTopOf="@+id/guideline">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_marginBottom="@dimen/_100sdp"
                    android:id="@+id/txtDescription"
                    android:gravity="top|left"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    android:singleLine="false"
                    android:inputType="textMultiLine"
                    android:fontFamily="@font/montserrat"
                    android:scrollbars="vertical"
                    android:maxLength="256"
                    android:text=""
                    android:textColor="@color/colorPrimary" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>






    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/btnExistentChat"
    android:background="@drawable/full_rounded_low"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:backgroundTint="#f2f2f2"
    android:layout_height="wrap_content">

    <LinearLayout
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.github.abdularis.civ.CircleImageView
            android:id="@+id/imgChat"
            android:layout_weight="1.2"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:elevation="@dimen/_50sdp"
            android:src="@drawable/ic_profile_ola"/>

        <LinearLayout
            android:gravity="center"
            android:layout_marginLeft="@dimen/_5sdp"
            android:orientation="vertical"
            android:layout_weight=".6"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txDoctorName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:ellipsize="end"
                android:text="Dr.Murphy"
                android:textColor="#000000"
                android:textSize="@dimen/_14sdp"
                />
            <TextView
                android:id="@+id/txDoctorSpeciality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="Cirujano"/>

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/btnGo"
            android:layout_weight="1.2"
            android:layout_marginRight="@dimen/_10sdp"
            android:gravity="right|center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/ic_go"/>
        </RelativeLayout>



    </LinearLayout>

</RelativeLayout>